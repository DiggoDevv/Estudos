function apresenta(nome){
    return `meu nome é ${nome}`;
}
//forma clássica

//forma arrow:
const apresentarArrow = nome => `meu nome é ${nome}`;
//exemplo2   //precisa dos parenteses porque agora tem mais de um parametro
const soma = (num1, num2) => num1 + num2;
//ATENÇÃO: se tiver mais de uma linha de código vai precisar das "{}" e do "return"
//ATENÇÃO2: operador maior que ">=" arrow function "=>"

//Arrow function com + de 1 linha de instrução
const somaNumerosPequenos = (num1, num2) => {
    if (num1 || num2 > 10){
          //"||" significa "ou"
    return "somente números de 1 a 9"
    } else {
        return num1 + num2;
    }
}
